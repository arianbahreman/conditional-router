{
  "name": "arianbahreman/conditional-router",
  "description": "A lightweight PSR-7 conditional router for WordPress, supporting both class methods and callable functions.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Arian Bahreman",
      "email": "arian.bahreman@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "laminas/laminas-diactoros": "^2.0",
    "psr/http-message": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "ConditionalRouter\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "test": "phpunit --bootstrap vendor/autoload.php tests/"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
